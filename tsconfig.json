{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "features/**/*.ts",
    "steps/**/*.ts",
    "pages/**/*.ts",
    "tests/**/*.ts",
    "core/**/*.ts"
  ]
}
